{
    "defines": [
        ".DEFAULT_GOAL := bin/nightwing",
    ],

    "nightwing": {
        "type": "source",
        "depends": [],
        "root": "./",
        "target": "bin/nightwing",
        "sources" : [
	       "*.cc",
           "src/*.cc"
        ],
        "ignores": [
           "./thirdparty",
	       "./_old"
        ],
        "dependency_command": "c++ -MM",
        "compiler": {
            "command": "c++",
            "libs": [],
            "flags": [
                "ggdb"
            ],
            "includes": [
            ],
            "pkg_configs": [
                "xcb"
            ],
            "obj_path": "build/"
        }
    },

    "clean": {
        "type": "exec",
        "depends": [],
        "commands": [
            "rm -f obj/*.o obj/lib/*.o bin/nightwing"
        ]
    },

    "make": {
        "type": "exec",
        "depends": [],
        "commands": [
            "lbtcli -m .lbt"
        ]
    }
}
